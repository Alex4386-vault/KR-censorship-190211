{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "lib",
    "lib": [
      "es2018"
    ],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
